<?xml version="1.0" encoding="utf-8"?>
<!-- activity_count_options.xml is used by CountOptionsActivity.java
     Last edited on 2024-11-04
 -->

<ScrollView android:id="@+id/count_options"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:background="#006600"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- all the initial widgets will go in here -->
        <LinearLayout
            android:id="@+id/static_widget_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        </LinearLayout>

        <!-- all the count widgets will go in here -->
        <LinearLayout
            android:id="@+id/dynamic_widget_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        </LinearLayout>
    </LinearLayout>
</ScrollView>
