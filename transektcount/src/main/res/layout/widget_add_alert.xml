<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_marginLeft="5dp"
              android:layout_marginTop="5dp"
              android:layout_marginRight="5dp"
              android:background="@drawable/rounded_corner"
              android:padding="5dp">

    <TextView
        android:id="@+id/add_alert_text"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:layout_gravity="bottom|start|end|top"
        android:text="@string/addSomeAlerts"
        android:layout_weight="18"
        android:padding="5dp"/>

    <ImageButton
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:onClick="addAnAlert"
        android:layout_weight="1"
        android:gravity="center_vertical|end"
        android:src="@android:drawable/ic_menu_add"
        android:layout_gravity="bottom|end|top"
        android:layout_margin="5dp"
        android:contentDescription="@string/addAlertButton"/>


</LinearLayout>