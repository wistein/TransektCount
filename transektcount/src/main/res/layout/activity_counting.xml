<LinearLayout android:id="@+id/countingScreen"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- insert the section notes in here -->
        <LinearLayout
            android:id="@+id/sectionNotesLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:orientation="vertical"
            />

        <!-- separating white line -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@android:color/white"
            android:paddingTop="2dp"
            />

        <!-- insert spinner widget_counting_head1 here -->
        <Spinner
            android:id="@+id/countHead1Spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <!-- separating white line -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@android:color/white"
            android:paddingTop="2dp"
            />

        <!-- insert head2 in here -->
        <LinearLayout
            android:id="@+id/countHead2Layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:orientation="vertical"
            />

        <!-- separating white line -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@android:color/white"
            android:paddingTop="2dp"
            />

        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- insert the internal counts in here -->
                <LinearLayout
                    android:id="@+id/countCountiLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fillViewport="true"
                    android:orientation="vertical"
                    />

                <!-- separating white line -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@android:color/white"
                    android:paddingTop="2dp"
                    />

                <LinearLayout
                    android:id="@+id/countHead3Layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fillViewport="true"
                    android:orientation="vertical"
                    />

                <!-- separating white line -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@android:color/white"
                    android:paddingTop="2dp"
                    />

                <!-- insert the external counts in here -->
                <LinearLayout
                    android:id="@+id/countCounteLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fillViewport="true"
                    android:orientation="vertical">
                </LinearLayout>

                <!-- separating white line -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@android:color/white"
                    android:paddingTop="2dp"
                    />

                <!-- insert the species notes in here -->
                <LinearLayout
                    android:id="@+id/countNotesLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fillViewport="true"
                    android:orientation="vertical"
                    />

                <!-- insert the alert notes in here -->
                <LinearLayout
                    android:id="@+id/alertNotesLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fillViewport="true"
                    android:orientation="vertical"
                    />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>
