        android:paddingEnd="5dp"
        android:paddingStart="5dp"
        android:paddingTop="0dp">

            <TextView
                android:id="@+id/f1eName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:layout_weight="3.5"
                android:hint="@string/countImagomfHint"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#bfffff"
                android:textSize="17sp"/>

            <com.wmstein.transektcount.AutoFitText
                android:id="@+id/countCountf1e"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="bottom|end|top"
                android:layout_marginBottom="0dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="2"
                android:background="@drawable/count_background"
                android:gravity="center_vertical|center_horizontal"
                android:hint="@string/charZero"
                android:inputType="number"
                android:paddingBottom="1dp"
                android:paddingEnd="1dp"
                android:paddingStart="1dp"
                android:paddingTop="1dp"
                android:maxLines="1"
                android:textAlignment="center"
                android:textColor="#FFFFFF"/>

            <ImageButton
                android:id="@+id/buttonDownf1e"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.4"
                android:layout_marginEnd="5dp"
                android:onClick="countDownf1e"
                android:scaleType="fitCenter"
                android:src="@drawable/minus"
                android:textStyle="bold"
                tools:ignore="ContentDescription" />

            <ImageButton
                android:id="@+id/buttonUpf1e"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.6"
