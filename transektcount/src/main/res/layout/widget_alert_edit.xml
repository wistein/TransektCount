<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_marginLeft="5dp"
              android:layout_marginTop="5dp"
              android:layout_marginRight="5dp"
              android:background="@drawable/rounded_corner"
              android:paddingStart="5dp"
              android:paddingTop="5dp"
              android:paddingEnd="5dp">

    <EditText
        android:id="@+id/alert_name"
        android:layout_height="50dp"
        android:layout_width="0dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:inputType="textCapSentences"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:background="@drawable/count_background"
        android:layout_gravity="bottom|start|end|top"
        android:hint="@string/alertName"
        android:layout_weight="10"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:padding="5dp"
        tools:ignore="Autofill" />

    <EditText
        android:id="@+id/alert_value"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:maxWidth="100dp"
        android:minWidth="100dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:hint="@string/charZero"
        android:inputType="phone"
        android:textAlignment="center"
        android:gravity="center|center_vertical|center_horizontal"
        android:textColor="#FFFFFF"
        android:background="@drawable/count_background"
        android:textSize="30sp"
        android:layout_gravity="bottom|end|top"
        android:layout_weight="3"
        android:padding="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        tools:ignore="Autofill" />

    <ImageButton
        android:id="@+id/delete_button"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:onClick="deleteAnAlert"
        android:gravity="center_vertical|end"
        android:src="@android:drawable/ic_menu_delete"
        android:layout_gravity="bottom|end|top"
        android:layout_margin="5dp"
        tools:ignore="ContentDescription" />

</LinearLayout>