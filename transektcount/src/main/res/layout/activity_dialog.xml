<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/show_dialog"
    android:background="@color/DarkGray"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageLogoHelp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center"
        android:paddingStart="25dip"
        android:paddingTop="22dip"
        android:paddingBottom="22dip"
        android:src="@mipmap/ic_launcher_round"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/help_head"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/imageLogoHelp"
        android:gravity="center"
        android:paddingStart="10dip"
        android:paddingTop="20dip"
        android:paddingEnd="30dip" />

    <!-- separating white line -->
    <View
        android:id="@+id/line_head"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/PaleGreen"
        android:layout_below="@+id/imageLogoHelp"
        android:layout_marginBottom="5dp"
        android:paddingTop="2dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line_head">

        <TextView
            android:id="@+id/help_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:paddingStart="10dip"
            android:paddingTop="10dip"
            android:paddingEnd="10dip" />
    </ScrollView>

</RelativeLayout>
