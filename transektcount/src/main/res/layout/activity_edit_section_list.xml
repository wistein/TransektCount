<?xml version="1.0" encoding="utf-8"?>
<!-- activity_edit_species_list.xml is used by EditSectionListActivity.kt
     in conjunction with widget_edit_title.xml and widget_edit_count.xml
     Last edited on 2024-11-04
  -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/editSectionList"
    android:background="#006600"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- insert section title -->
    <LinearLayout
        android:id="@+id/editingLineLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corner"
        android:fillViewport="true"
        android:orientation="vertical">
    </LinearLayout>

    <!-- insert hint -->
    <LinearLayout
        android:id="@+id/showHintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="2dp"
        android:background="@drawable/rounded_corner"
        android:orientation="vertical">
    </LinearLayout>

    <ScrollView
        android:id="@+id/editingScreen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- insert species as they are created in here -->
        <LinearLayout
            android:id="@+id/editingSpeciesLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        </LinearLayout>

    </ScrollView>

</LinearLayout>
